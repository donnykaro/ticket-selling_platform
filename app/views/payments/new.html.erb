<div class="section">
<%= simple_form_for ([current_user, @order, @payment]) do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :order_id, :value => params[:order_id] %>
  <%= f.hidden_field :bill, :value => @order.bill %>
  <h2><strong>Pay for tickets for event <%= @event.name %>, bill: <%= @order.bill %></strong></h2>

  <div class="field">
    <div class="control">
      <%= f.input :hashed_card, {label: 'Card number'} %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :first_name %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :last_name %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.date_field :expiration_date, min: Date.today %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :security_code %>
    </div>
  </div>

  </br>
  <%= f.button :submit, 'Pay', class: "button is-primary"  %>
<% end %>
</div>